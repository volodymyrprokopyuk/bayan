}
{% endmacro %}

{% macro leftHand() %}
\clef bass
\key c \major
\relative {
  c,+cM!4-\stBass r | R2 | g,,+gM!4-. g,,+c@M!-. |
  g,,+gM!8-. g,,+gM-. g,,+gM4-- |
  {{ lhFrag1() }}

  \repeat unfold 3 { g,@M!4 c@M!4 }
  g,@M!8[-. gM8]-. gM4-- |
  {{ lhFrag1() }}
}
{% endmacro %}
