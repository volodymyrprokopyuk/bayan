{% macro rhFrag1(a, b) %}
  {{ a }} d16 e f g a {{ b }} b |
  c='''8)-. g-. e-. c=''-. |
{% endmacro %}

{% macro rhFrag2(a) %}
  {{ a }} g fis g e g fis g='' |
{% endmacro %}

{% macro rhFrag3() %}
  d=''8-. d-. d( g)-. | c,-. c-. c=''4-- |
{% endmacro %}

{% macro lhFrag1() %}
  c,+cM!4 r | R2 | g,,+gM!4-. g,,+gM-. | %
  c,+cM!8-. c,+cM-. c,+cM4-- |
{% endmacro %}

{% macro rightHand() %}
\tempo Presto
\clef treble
\key c \major
\time 2/4
\relative {
  {{ rhFrag1("c''=''8(\\mf\\<", "\\af 16\\!") }}
  d=''8( g)-. e( g)-. | d-. d-. d4-- |
  {{ rhFrag1("c=''8(", "") }}
  {{ rhFrag3() }}

  {{ rhFrag2("d=''16(\\p") }}
  {{ rhFrag2("d=''16_\\dCre") }}
  {{ rhFrag2("d=''16") }}
  d=''8)-. d-. d4-- |
  {{ rhFrag1("c=''8(\\mf\\<", "\\af 16\\!") }}
