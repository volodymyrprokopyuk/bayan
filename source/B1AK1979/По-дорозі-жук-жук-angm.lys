\clef treble
\key f \major
\time 2/4
\relative {
  {{ config() }}
  c'='8\f c( d e | f4) f4 | c8 c( d e | f4) a4 |
  {{ rhFrag1("bes='8-.\\mf", "f4) a") }}
  {{ rhFrag1("bes='8-.", "f4) f='") }} \bar "|."
}
{% endmacro %}

