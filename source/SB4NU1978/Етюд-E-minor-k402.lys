{% macro rhFrag1() %}
  \repeat unfold 2 {
    <ais,=' cis fis>16 g' <ais, cis fis> cis'='''-> %
  } | %
{% endmacro %}

{% macro rightHand() %}
\tempo Moderato
\clef treble
\key e \minor
\time 2/4
\relative {
  \repeat segno 2 {
    \volta 1
    \repeat volta 2 {
      <e''='' g b>16\mf c' <e, g b>_\artLegato g'-> %
      <e,='' g b>16 c' <e, g b> g'='''-> |
      \repeat unfold 2 {
        <e,='' fis a>16 b' <e, fis a > fis'='''-> %
      } | %
      \repeat unfold 2 {
        <b,,=' fis' a>16 b' <b, fis' a > fis''='''-> %
      } | %
      \repeat unfold 2 {
        <b,,=' e g>16 a' <b, e g> e'='''-> %
      } | %
      \repeat unfold 2 {
        <c,='' e g>16 a' <c, e g> e'='''-> %
      } | %
      \repeat unfold 2 {
        <c,='' e fis>16 g' <c, e fis> c'='''-> %
      } | %
      \alternative {
        \volta 1 {
          \repeat unfold 2 {
            <g,=' c e>16 fis' <g, c e> g'=''-> %
          } | %
          <fis,=' b dis>16^\tempRit b' <g, cis e> b'-> %
          <gis,=' cisis eis>16 b' <a, dis fis> c'='''-> |
        }
        \volta 2 {
          <g,=' c e>16 fis' <g, c e> g'-> %
          <fis,=' b dis>16 e' <fis, b dis> fis'-> |
          <g,=' b e>16^\tempRit fis' %
          <b,=' e g>16 b'-> <g='' b e>4-- \fine |
        }
      }
    }

    \volta 2
    \repeat volta 2 {
      <g,=' b d>16\f^\tempATempo e' <g, b d> b'-> %
      <g,=' b d>16 e' <g, b d> b'=''-> |
      \repeat unfold 2 {
        <g,=' cis e>16 fis' <g, cis e> a'=''-> %
      } | %
      \repeat unfold 2 {
        <g,=' c ees>16 f' <g, c ees> a'=''-> %
      } | %
      \repeat unfold 2 {
        <g,=' b d>16 e' <g, b d> g'=''-> %
      } | %
      \repeat unfold 2 {
        <g,=' b cis>16 d' <g, b cis> g'=''-> %
      } | %
      \repeat unfold 2 {
        <b,=' d fis>16 g' <b, d fis> d'='''-> %
      } | %
      \alternative {
        \volta 1 {
          {{ rhFrag1() }}
          <b,=' d fis>16 g' <b, d fis> b'-> %
          <c,='' d fis>16 g' <c, d fis> a'=''-> |
        }
        \volta 2 {
          {{ rhFrag1() }}
          <b,=' d fis>16^\tempRit g' <b, d fis> b'-> %
          <b,=' dis fis>16\> g' %
          <b,=' dis fis>16 \after 16\! b'=''-> \bar "||"
        }
      }
    }
  }
}
{% endmacro %}

